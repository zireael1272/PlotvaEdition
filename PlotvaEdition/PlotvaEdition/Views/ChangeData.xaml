<Page x:Class="PlotvaEdition.Views.ChangeData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlotvaEdition.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeData"
      Loaded="Data_Loaded">

    <Grid Background="White">
        <TextBox Name="Name" HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Surname" HorizontalAlignment="Center" Margin="0,130,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Patronymic" HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Name="Save" Content="Save" HorizontalAlignment="Center" Margin="0,228,0,0" VerticalAlignment="Top" Height="24" Width="104" Click="Save_Click"/>
        <Button Name="Cancel" Content="Cancel" HorizontalAlignment="Center" Margin="0,262,0,0" VerticalAlignment="Top" Height="24" Width="68" Click="Cancel_Click"/>

    </Grid>
</Page>
