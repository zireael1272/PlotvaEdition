<Window x:Class="PlotvaEdition.Views.MainScreenUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotvaEdition.Views"
        mc:Ignorable="d"
        Title="Main User" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Width="160" Grid.Column="0">
            <Button Content="Акаунт" Click="Account_Click" Height="40"/>
            <Button Content="Додати посилку" Click="AddParcel_Click" Height="40"/>
            <Button Content="Історія" Click="HistoryParcel_Click" Height="40"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="640" Height="40" Margin="0,-10,0,394" Grid.Column="1" Background="RoyalBlue">
            <Label Content="Plotva" FontSize="18" Foreground="White"  Margin="280,0,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="0,40,0,0"/>
    </Grid>
</Window>
