<Window x:Class="PlotvaEdition.Views.MainScreenUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotvaEdition.Views"
        mc:Ignorable="d"
        Title="Main User" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" Width="800" Height="40" Margin="0,-5,0,399" Background="RoyalBlue" Grid.ColumnSpan="2">
            <Label Content="Плотва" FontSize="18" Foreground="White"  Margin="380,0,0,0" HorizontalAlignment="Center"/>
            <Button Content="А" Click="Account_Click" Height="30" Width="30" Margin="300,0,0,0"/>
        </StackPanel>
        <Button Click="AddParcel_Click" Height="80" Width="80" Margin="250,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Створити&#x0A;посилку" TextAlignment="Center" />
        </Button>

        <Button Content="Історія" Click="HistoryParcel_Click" Height="80" Width="80" Margin="370,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,0,0"/>
    </Grid>
</Window>
